{
  "suggest.enablePreview": true,
  "codeLens.enable": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "●",
  "diagnostic.hintSign": "○",
  "coc.preferences.formatOnSaveFiletypes": [
    "yaml",
    "typescript",
    "javascript",
    "javascript.jsx",
    "typescript.tsx",
    "typescriptreact",
    "javascriptreact",
    "rescript"
  ],
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.linters": {
    "shellcheck": {
      "args": [
        "--format=gcc",
        "--external-sources",
        "-"
      ],
      "command": "shellcheck",
      "debounce": 100,
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
        {
          "column": 2,
          "line": 1,
          "message": 4,
          "security": 3
        }
      ],
      "offsetColumn": 0,
      "offsetLine": 0,
      "securities": {
        "error": "error",
        "note": "warning",
        "warning": "warning"
      },
      "sourceName": "shellcheck"
    }
  },
  "languageserver": {
    "rescript": {
      "enable": true,
      "module": "~/.config/nvim/plugged/vim-rescript/server/out/server.js",
      "args": [
        "--node-ipc"
      ],
      "filetypes": [
        "rescript"
      ],
      "rootPatterns": [
        "bsconfig.json"
      ]
    }
  }
}
